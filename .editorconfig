# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Go files
[*.go]
indent_style = tab
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Git config files
[.{gitignore,gitattributes}]
indent_style = space
indent_size = 2

# Protocol Buffer files
[*.proto]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,ini,cfg,conf}]
indent_style = space
indent_size = 2

# HTML templates
[*.{html,tmpl}]
indent_style = space
indent_size = 2

# CSS files
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# JavaScript/TypeScript files (if any)
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2

# go.mod and go.sum
[go.{mod,sum}]
indent_style = tab
